@model List<ReservationStatus>;

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2>예약 리스트</h2>
             </div>
            <div class="col-6 text-end">
                <a asp-controller="ReservationStatus" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-square"></i> 예약 추가
                </a>
            </div>
        </div>
    </div>



<table class="table table-bordered table-striped">
    <thead>
        <tr>
           <th class="col-2">
               이름
           </th>
            <th class="col-2">
               전화번호
           </th>
            <th class="col-2">
               예약시간
           </th>
           <th class="col-6"></th>
           
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=> u.Id))
        {
            <tr>
                <td>@obj.Name</td>    
                <td>@obj.PhoneNumber</td>    
                <td>@obj.ReservationTime</td>
                <td>
                    <div class="w-75 btn btn-group" role="group">
                        <a asp-controller="ReservationStatus" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                            수정
                        </a>
                        <a asp-controller="ReservationStatus" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            삭제
                        </a>
                    </div>
                </td>
            </tr>
        }        
        
    </tbody>
</table>
